<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/img_splashscreen</item>
    </style>

    <!-- DIVIDER -->
    <style name="DividerThin">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">#C9C9C9</item>
    </style>

    <style name="DividerThick">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <!-- TEXT STYLES -->
    <style name="ToolbarTitleText">
        <item name="android:textAppearance">@style/TextAppearance.Widget.AppCompat.Toolbar.Title
        </item>
        <item name="android:textColor">#FFFF</item>
    </style>

    <style name="LinotteHeading">
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/linotte_bold</item>
    </style>

    <style name="EventTextGreen">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/linotte_bold</item>
    </style>

    <style name="EventTextRed">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">#DA0202</item>
        <item name="android:fontFamily">@font/linotte_bold</item>
    </style>

    <style name="EventTextBlack">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_heading</item>
        <item name="android:textColor">#0000</item>
        <item name="android:fontFamily">@font/linotte_bold</item>
    </style>


    <!-- SPACE -->
    <style name="MediumSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
    </style>

    <!-- OVERLAY -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
