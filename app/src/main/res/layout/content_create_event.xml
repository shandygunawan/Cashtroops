<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".CreateEventActivity"
    tools:showIn="@layout/activity_create_event">

    <!-- EVENT NAME -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp"
        card_view:contentPadding="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CARD TITLE -->
            <TextView
                android:id="@+id/tv_event_create_name"
                style="@style/LinotteHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Name"/>

            <View
                android:id="@+id/space_event_create_name"
                style="@style/MediumSpace"
                app:layout_constraintTop_toBottomOf="@id/tv_event_create_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <!-- Edit Text -->
            <EditText
                android:id="@+id/et_event_create_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter name here"
                app:layout_constraintTop_toBottomOf="@id/space_event_create_name"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!-- DATE PICKER -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp"
        card_view:contentPadding="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CARD TITLE -->
            <TextView
                android:id="@+id/tv_event_create_date"
                style="@style/LinotteHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Date"/>

            <View
                android:id="@+id/space_event_create_date"
                style="@style/MediumSpace"
                app:layout_constraintTop_toBottomOf="@id/tv_event_create_date"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <!-- Edit Text -->
            <EditText
                android:id="@+id/et_event_create_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"
                android:hint="Enter date here"
                app:layout_constraintTop_toBottomOf="@id/space_event_create_date"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!-- BUDGET -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp"
        card_view:contentPadding="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CARD TITLE -->
            <TextView
                android:id="@+id/tv_event_create_budget"
                style="@style/LinotteHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Budget"/>

            <View
                android:id="@+id/space_event_create_budget"
                style="@style/MediumSpace"
                app:layout_constraintTop_toBottomOf="@id/tv_event_create_budget"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <!-- Edit Text -->
            <EditText
                android:id="@+id/et_event_create_budget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter budget here"
                app:layout_constraintTop_toBottomOf="@id/space_event_create_budget"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <!-- DESCRIPTION -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="10dp"
        card_view:contentPadding="10dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- CARD TITLE -->
            <TextView
                android:id="@+id/tv_event_create_desc"
                style="@style/LinotteHeading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:text="Description"/>

            <View
                android:id="@+id/space_event_create_desc"
                style="@style/MediumSpace"
                app:layout_constraintTop_toBottomOf="@id/tv_event_create_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>

            <!-- Edit Text -->
            <EditText
                android:id="@+id/et_event_create_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter description here"
                android:inputType="textMultiLine"
                android:maxLines="8"
                app:layout_constraintTop_toBottomOf="@id/space_event_create_desc"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

    <ImageView
        android:layout_width="@dimen/image_large"
        android:layout_height="@dimen/image_medium"
        android:src="@drawable/img_jenius"
        android:layout_gravity="center"/>

</LinearLayout>