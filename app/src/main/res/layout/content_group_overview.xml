<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".GroupOverviewActivity"
    tools:showIn="@layout/activity_group_overview">

    <!-- OVERVIEW-->
    <TextView
        android:id="@+id/tv_overview"
        style="@style/LinotteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:text="@string/overview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/dvd_overview"
        style="@style/DividerThick"
        app:layout_constraintBottom_toBottomOf="@id/tv_overview"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <!-- BALANCE -->
    <ImageView
        android:id="@+id/iv_balance"
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium"
        android:contentDescription="@string/balance_image_desc"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:src="@drawable/balance"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dvd_overview" />

    <TextView
        android:id="@+id/tv_balance_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/balance_text"
        android:textSize="@dimen/text_heading"
        app:layout_constraintBottom_toBottomOf="@id/iv_balance"
        app:layout_constraintLeft_toRightOf="@id/iv_balance"
        app:layout_constraintTop_toTopOf="@id/iv_balance" />

    <TextView
        android:id="@+id/tv_balance_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/margin_medium"
        android:text="Rp 10.000.000,00"
        android:textSize="@dimen/text_heading"
        app:layout_constraintBottom_toBottomOf="@id/iv_balance"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_balance" />

    <View
        android:id="@+id/dvd_balance"
        style="@style/DividerThin"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/iv_balance" />

    <!-- HISTORY PAST WEEK -->
    <ImageView
        android:id="@+id/iv_history"
        android:layout_width="@dimen/image_medium"
        android:layout_height="@dimen/image_medium"
        android:contentDescription="@string/balance_image_desc"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:src="@drawable/history"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dvd_balance" />

    <TextView
        android:id="@+id/tv_history_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This week"
        android:textSize="@dimen/text_heading"
        app:layout_constraintBottom_toBottomOf="@id/iv_history"
        app:layout_constraintLeft_toRightOf="@id/iv_history"
        app:layout_constraintTop_toTopOf="@id/iv_history" />

    <TextView
        android:id="@+id/tv_history_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Rp 65.000,00"
        android:textSize="@dimen/text_heading"
        app:layout_constraintBottom_toBottomOf="@id/iv_history"
        app:layout_constraintEnd_toEndOf="@+id/tv_balance_amount"
        app:layout_constraintTop_toTopOf="@id/iv_history" />

    <!-- Image for this week statistic here -->

    <View
        android:id="@+id/dvd_history"
        style="@style/DividerThick"
        app:layout_constraintBottom_toBottomOf="@id/iv_history"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />


    <!-- EVENT -->
    <TextView
        android:id="@+id/tv_next_event"
        style="@style/LinotteHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/margin_medium"
        android:paddingBottom="@dimen/margin_medium"
        android:text="Next Event"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dvd_history" />

    <View
        android:id="@+id/dvd_next_event"
        style="@style/DividerThick"
        app:layout_constraintBottom_toBottomOf="@id/tv_next_event"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:orientation="vertical"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dvd_next_event">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_event_name"
                android:layout_width="@dimen/image_large"
                android:layout_height="@dimen/image_large"
                android:layout_weight="1"
                android:src="@drawable/airplane" />

            <ImageView
                android:id="@+id/iv_event_date"
                android:layout_width="@dimen/image_large"
                android:layout_height="@dimen/image_large"
                android:layout_weight="1"
                android:src="@drawable/calendar_blue" />

            <ImageView
                android:id="@+id/iv_event_cost"
                android:layout_width="@dimen/image_large"
                android:layout_height="@dimen/image_large"
                android:layout_weight="1"
                android:src="@drawable/wallet" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:orientation="horizontal">

            <TextView
                style="@style/EventTextGreen"
                android:text="Bali" />

            <TextView
                style="@style/EventTextGreen"
                android:text="25 days" />

            <TextView
                style="@style/EventTextRed"
                android:text="- 5 million IDR" />

        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>