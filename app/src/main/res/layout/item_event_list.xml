<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_event_list_desc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_large"
    android:orientation="horizontal"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toLeftOf="parent">

    <TextView
        android:id="@+id/tv_event_list_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_medium"
        android:text="17"
        style="@style/LinotteHeading"
        android:textSize="@dimen/text_xlarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/event_list_box">

        <TextView
            android:id="@+id/tv_event_list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/linotte_bold"
            android:textSize="@dimen/text_xlarge"
            android:text="Bali Kuy!"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_event_list_budget_target"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/linotte_regular"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_heading"
            android:text="Target Budget: 25.000.000" />
    </LinearLayout>
</LinearLayout>